[Unit]
Description=Zero Ci
After=syslog.target

[Service]
Type=simple
WorkingDirectory=/opt/code/github/AhmedHanafy725/zeroCI
Environment=LANG=en_US.UTF-8
Environment=LC_ALL=en_US.UTF-8
Environment=LC_LANG=en_US.UTF-8
Environment=PYTHONPATH=/sandbox/lib/jumpscale
ExecStart=/usr/local/bin/uwsgi --ini zero_ci.ini
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.targe
